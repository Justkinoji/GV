{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["jest","node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/tests"]
}
